<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="3dp"
    app:cardCornerRadius="20dp"
    android:backgroundTint="#4FFFFFFF">

    <LinearLayout
        android:id="@+id/item_strategy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/order_id"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="1"
            android:textSize="10sp"
            android:gravity="center"
            android:fontFamily="@font/days_one_regular"
            android:textColor="#fff"
            android:background="@drawable/rounded_button"
            android:padding="5dp"
            android:layout_margin="2dp"/>

        <TextView
            android:id="@+id/order_type"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="SHORT"
            android:textSize="10sp"
            android:gravity="center"
            android:fontFamily="@font/days_one_regular"
            android:textColor="#fff"
            android:background="@drawable/rounded_button"
            android:padding="8dp"
            android:layout_margin="2dp"/>

        <TextView
            android:id="@+id/order_margin"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="20/25"
            android:textSize="10sp"
            android:gravity="center"
            android:fontFamily="@font/days_one_regular"
            android:textColor="#fff"
            android:background="@drawable/rounded_button"
            android:padding="8dp"
            android:layout_margin="2dp"/>

        <TextView
            android:id="@+id/order_profit_per"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="12,5%"
            android:textSize="10sp"
            android:gravity="center"
            android:fontFamily="@font/days_one_regular"
            android:textColor="#fff"
            android:background="@drawable/rounded_button"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/order_profit"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="1.5$"
            android:textSize="10sp"
            android:gravity="center"
            android:fontFamily="@font/days_one_regular"
            android:textColor="#fff"
            android:background="@drawable/rounded_button"
            android:padding="8dp"
            android:layout_margin="2dp"/>

        <TextView
            android:id="@+id/order_per"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="1.5%"
            android:textSize="10sp"
            android:gravity="center"
            android:fontFamily="@font/days_one_regular"
            android:textColor="#fff"
            android:background="@drawable/rounded_button"
            android:padding="8dp"
            android:layout_margin="2dp"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>