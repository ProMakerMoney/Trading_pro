<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/button_gradient"
    tools:context=".StrategyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:background="@drawable/input"
        android:layout_marginTop="30dp"
        android:gravity="center"
            android:orientation="vertical">

        <TextView
            android:id="@+id/strategyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cтратегия"
            android:textColor="#CC000000"
            android:textSize="25sp"
            android:fontFamily="@font/days_one_regular" />


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/loading_animation"
                android:layout_width="170dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_fileName="procces.json" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                android:text="Вычисляется"
                android:textColor="#CC000000"
                android:textSize="20sp"
                android:fontFamily="@font/days_one_regular" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="20sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Результаты"
                android:textColor="#CC000000"
                android:textSize="25sp"
                android:fontFamily="@font/days_one_regular"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/input">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/strategy_res"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:padding="6dp"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/item_result"/>

            </RelativeLayout>
        </LinearLayout>




    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>